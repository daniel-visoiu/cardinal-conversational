{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "baseUrl": ".",
    "paths": {
      "cardinal-core/*": ["dev/cardinal-core/src/*"],
      "cardinal-ui": ["cardinal-ui"],
    }
  },
  "include": ["src", "assets", "types/jsx.d.ts"],
  "exclude": ["node_modules"]
}
