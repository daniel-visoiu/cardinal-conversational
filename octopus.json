{
  "workDir": ".",
  "dependencies": [
    {
      "name": "cardinal-core",
      "src": "https://github.com/daniel-visoiu/cardinal-core.git",
      "actions": [
        {
          "type": "smartClone",
          "target": "./node_modules/",
          "collectLog": false
        },
        {
          "type": "execute",
          "cmd": "cd ./node_modules/cardinal-core && npm install"
        },
        {
          "type": "execute",
          "cmd": "cd ./node_modules/cardinal-core && npm run build"
        }
      ]
    },
    {
      "name": "cardinal-ui",
      "src": "https://github.com/daniel-visoiu/cardinal-ui.git",
      "actions": [
        {
          "type": "smartClone",
          "target": "./node_modules/",
          "collectLog": false
        },
        {
          "type": "execute",
          "cmd": "cd ./node_modules/cardinal-ui && npm install"
        },
        {
          "type": "execute",
          "cmd": "cd ./node_modules/cardinal-ui && npm run build"
        }
      ]
    },
    {
      "name": "clear-sky-theme",
      "src": "https://github.com/PrivateSky/clear-sky-theme.git",
      "actions": [
        {
          "type": "smartClone",
          "target": "./dev/themes",
          "collectLog": false
        }
      ]
    }
  ],
  "build-conversational": [
    {
      "name": "build-conversational",
      "src": "",
      "actions": [
        {
          "type": "remove",
          "target": "./dist"
        },
        {
          "type": "execute",
          "cmd": "stencil build"
        }
      ]
    }
  ],
  "build-theme": [
    {
      "name": "clear-sky-theme-copy",
      "src": "",
      "actions": [
        {
          "type": "remove",
          "target": "./themes/clear-sky-theme"
        },
        {
          "type": "copy",
          "src": "./dev/themes/clear-sky-theme/src",
          "target": "./themes/clear-sky-theme"
        }
      ]
    }
  ]
}
